{% extends 'base.html.twig' %}{% block body %}
<div class="p-5 " id="presentation">
    {% for about in abouts %}
    <center>
        <div class=" m-3 " style="max-width: 680px; ">
            <div class="row ">
                <div class="col-md-4 mt-5 ">
                    <img class="rounded-circle " src={{about.avatar}} alt=" Thibaud Béjat ">
                </div>
                <div class="col-md-8 ">
                    <div class="card-body justify-content-left" style="color:#4886af">
                        <h5 class="card-title ">{{about.title}}</h5>
                        <p class="card-text ">{{about.subtitle}}</p>
                        <div class="card-text ">
                            <p>{{about.description}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </center>
    {% endfor %}
</div>
<hr style="height: 4px; color: #4886af " align=" CENTER " width="100% ">
<div>
    <div id="expertises" class="mt-5 ">
        <h1 style="color:#4886af">EXPERTISES</h1>
    </div>
    <div class="container mb-5 ">

        {% for expertise in expertises %}{% if expertise.id is divisible by(2) %}
        <div class="row ">
            <div class="col-8 ">
                <div class="mt-5 card_5" style="background-color : #E5E6E7; ">
                    <div class="p-3 text-center text-dark">{{expertise.title}}</div>
                    <div class="card-body ">
                        <p class="card-text text-dark ">{{expertise.description}}</p>
                    </div>
                </div>
            </div>
            <div class="col-4 "></div>
        </div>
        {% else %}
        <div class="row ">
            <div class="col-4 "></div>
            <div class="col-8 ">
                <div class="mt-5 card_5" style="background-color : #4886AF; ">
                    <div class="p-3 text-center ">{{expertise.title}}</div>
                    <div class=" card-body text-secondary ">
                        <p class="card-text_2 ">{{expertise.description}}</p>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}{% endfor %}
    </div>
    <hr style="height: 4px; color: #4886af " align=" CENTER " width="100% ">
    <div id="actualités">
        <div class="mt-5">
            <h1 style="color:#4886af">ACTUALITES</h1>
        </div>
        <div class="row mb-5 ">
            <div class="col-1 "></div>
            <div class="col-2 ">
                <a href=" ">Les plus récentes </a>
            </div>
            <div class="col-2 ">
                <a href=" ">Journal Officiel </a>
            </div>
            <div class="col-4 ">
                <a href=" ">Les Décisions importantes des derniers mois  </a>
            </div>
            <div class="col-3 ">
                <a href=" ">Toutes </a>
            </div>
        </div>
        {% for new in news %}
        <div class="aboutletout">

            <div class=" row ">
                <div class="col-1 ">
                </div>
                <div class="col-sm-5 ">
                    <div class="card_5">

                        <div class="col-1 ">
                        </div>
                        <div class="card-body-expertise-1 ">
                            <div class="mt-0 "></div>
                            <div class=" row ">
                                <div class="col-6 ">
                                    <h5 class=" card-title-about ">{{new.title}}</h5>
                                </div>
                                <div class="col-3 "></div>
                                <div class="col-3 ">
                                    <p style="text-align: right ">{{new.subtitle}}</p>
                                </div>
                            </div>
                            <div class="pr-5 ">

                                <p class="card-text p-2 ">{{new.description}}</p>
                            </div>
                            <div class="pl-5 ">

                                <p class="card-text p-2 ">Description </p>
                            </div>
                            <center>
                                <div class="p-1 ">
                                    <a href="# " class="btn btn-primary ">Go somewhere</a>
                                </div>
                            </center>


                            <div class="card-date ">

                                <p style="text-align: right ">Date</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}

                <hr style="height: 4px; color: #4886af " align=" CENTER " width="100% ">
                <div id="contact">
                    <h1 style="color:#4886af">Contact</h1>
                    <button class="p-2 btn border border-dark bg-white">{{ button_label|default('Envoyer') }}</button>
                </div> {% endblock %}