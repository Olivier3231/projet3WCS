{% extends 'base.html.twig' %}{% block body %}
<div class="p-5">
    {% for about in abouts %}
    <div class="container-fluid">
        <div class="row">
            <div id="avatar" class="col-md-4">
                <img class="rounded-circle" src={{about.avatar}} alt="Thibaud Béjat">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{about.title}}</h5>
                    <p class="card-text">{{about.subtitle}}</p>
                    <div class="card-text">
                        <p>{{about.description}}</p>
                    </div>
                    <div class="text-center p-5 m-5">
                        <a href="/#contact" class="btn bg-white "> Contact </a>
                    </div>
                    <div id="compétences"></div>
                </div>
            </div>
        </div>
        </center>
        {% endfor %}
    </div>
    <hr class="separateur">

    <h1 class="mt-5 mb-5">COMPÉTENCES</h1>

    <div class="container mb-5 ">

        {% for expertise in expertises %}{% if expertise.id is divisible by(2) %}
        <div class="row ">
            <div class="col-8 ">
                <div class="mt-5 card_competence1">
                    <div class="p-3 text-center text-dark ">{{expertise.title}}</div>
                    <div class="card-body ">
                        <p class="card-text text-dark ">{{expertise.description}}</p>
                    </div>
                </div>
            </div>
            <div class="col-4 "></div>
        </div>
        {% else %}
        <div class="row ">
            <div class="col-4 "></div>
            <div class="col-8 ">
                <div class="mt-5 card_5">
                    <div class="p-3 text-center ">{{expertise.title}}</div>
                    <div class=" card-body text-secondary ">
                        <p class="card-text_2 ">{{expertise.description}}</p>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}{% endfor %}
        <div class="mb-5 " id="actualités"></div>
    </div>

    <hr class="separateur ">

    <h1 class="mt-5 mb-5 ">ACTUALITÉS</h1>

    <div class="container ">
        <div class="row mb-5 ">
            <div class="col-1 "></div>
            <div class="col-2 ">
                <a href=" ">Les plus récentes</a>
            </div>
            <div class="col-2 ">
                <a href=" ">Journal Officiel</a>
            </div>
            <div class="col-4 ">
                <a href=" ">Les Décisions importantes des derniers mois</a>
            </div>
            <div class="col-3 ">
                <a href=" ">Toutes les actualités</a>
            </div>
        </div>
        <div class="aboutletout ">


            <div class="row g-5">
                {% for new in news %}
                <div class="col-sm-6">
                    <div class="card_5">
                        <div class="row ">
                            <div class="col-5 ">
                                 <h5 class="card-title-about m-4"> {{new.title}} </h5>
                            </div>
                            <div class="col-5"></div>
                                <div class="col-2">
                                    <div class="logo mt-4">
                                        <img class="img-news" src={{new.newscategory.logo}}>
                                    </div>
                                </div>
                        </div>
                            <h6 class="card-title-about m-4"> {{new.newscategory.name}} </h6>
                        <div>
                            <p class="card-text p-2 m-4">{{new.description}}</p>
                        </div>
                        <div class="p-1 text-center ">
                            <a href="# " class="btn bg-white rounded align-center"> En savoir plus </a>
                        </div>
                        <div>
                            <p class="card-date m-3"> {{new.date|date(" d-m-Y ")}} </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
                <div class=" mb-5 " id="contact"></div>
            </div>
        </div>
    </div>

    <hr class="separateur">
    <h1 class="mt-5 mb-5 ">CONTACT</h1>
    <div class="container ">
        <div class="row gx-5 ">
            <div class="col-6 ">{% form_theme form 'bootstrap_4_layout.html.twig' %}
                <div class="form ">
                    {{ form_start(form) }}
                    <div class="m-3 ">{{form_widget(form.firstname)}}</div>
                    <div class="form-error ">
                        {{ form_errors(form.firstname) }}
                    </div>
                    <div class="m-3 ">{{form_widget(form.lastname)}}</div>
                    <div class="form-error ">
                        {{ form_errors(form.lastname) }}
                    </div>
                    <div class="m-3 ">{{form_widget(form.email)}}</div>
                    <div class="form-error ">
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="m-3 ">{{form_widget(form.phone_number)}}</div>
                    <div class="form-error ">
                        {{ form_errors(form.phone_number) }}
                    </div>
                    <div class="message m-3 ">{{form_widget(form.message)}}</div>
                    <div class="form-error ">
                        {{ form_errors(form.message) }}
                    </div>
                    <div>{{form_widget(form.checkbox)}}</div>
                    <button class="btn m-5 bg-white rounded ">{{ button_label|default('Envoyer') }}</button>{{ form_end(form) }}
                </div>
            </div>
            <div class="col-6 ">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2623.978548696972!2d2.2912774158180307!3d48.87768547928943!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66f932e07fec1%3A0xe493fc5a9e79c52d!2s52%20Rue%20des%20Acacias%2C%2075017%20Paris!5e0!3m2!1sfr!2sfr!4v1623337638778!5m2!1sfr!2sfr "
                    width="600 " height="750 " style="border:10px " allowfullscreen=" " loading="lazy "></iframe>
            </div>
        </div>
    </div>
</div>
</div>{% endblock %}