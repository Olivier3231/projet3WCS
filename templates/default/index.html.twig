 {% extends 'base.html.twig' %}{% block body %} {% for about in abouts %}

<div class="presentation p-5">
    <div class="about row m-5">
        <div class="avatar col-4 text-center">
            <img class="picture rounded-circle" src="{{ asset('build/avatarThibaud.png') }}" alt="Thibaud Béjat">
        </div>
        <div class="col-8">
            <div class="card-body">
                <h5 class="card-title">{{about.title}}</h5>
                <h6 class="card-text">{{about.subtitle}}</h6>
                <div class="card-text">
                    <p>{{about.description}}</p>
                </div>
                <div class="text-center pt-5">
                    <a href="/#contact" class="btn bg-white"> Contact </a>
                </div>
                <div id="compétences"></div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<hr class="separateur">

<h1 class="titre mt-5 mb-5">COMPÉTENCES</h1>

<div class="competence container mb-5">

    {% for expertise in expertises %}{% if expertise.id is divisible by(2) %}
    <div class="total_card row">
        <div class="width col-8">
            <div class="mt-5 card_competence1">
                <h5 class="p-3 text-center">{{expertise.title}}</h5>
                <div class="card-body">
                    <p class="card-text_1">{{expertise.description}}</p>
                </div>
            </div>
        </div>
        <div class="space col-4"></div>
    </div>
    {% else %}
    <div class="total_card row">
        <div class="space col-4"></div>
        <div class="width col-8">
            <div class="mt-5 card_competence2">
                <h5 class="p-3 text-center">{{expertise.title}}</h5>
                <div class="card-body text-secondary">
                    <p class="card-text_2">{{expertise.description}}</p>
                </div>
            </div>
        </div>
    </div>
    {% endif %}{% endfor %}
    <div class="mb-5" id="actualités"></div>
</div>

<hr class="separateur">

<h1 class="titre mt-5 mb-5">ACTUALITÉS</h1>

<div class="container">
    <div class="row mb-5">
        <div class="col-2">
            <a href=" /recent/ ">Les plus récentes</a>
        </div>
        <div class="col-2">
            <a href="/journal/ ">Journal Officiel</a>
        </div>
        <div class="col-4">
            <a href=" ">Les Décisions importantes des derniers mois</a>
        </div>
        <div class="col-3">
            <a href="">Toutes les actualités</a>
        </div>
    </div>
    <div class="article row g-5">
        {% for new in news %}
        <div class="news col-sm-6">
            <div class="card_5">
                <div class="row">
                    <div class="col-6">
                        <h5 class="m-4"> {{new.title}} </h5>
                    </div>
                    <div class="col-4">
                    </div>
                    <div class="col-2">
                        <div class="logo mt-4">
                            <img class="img-news" src={{new.newscategory.logo}}>
                        </div>
                    </div>
                </div>
                <h6 class="m-4"> {{new.newscategory.name}} </h6>
                <div class="new_description">
                    <p class="p-2 m-4">{{new.description}}</p>
                </div>
                <div class="p-1 text-center">
                    <a href="#myModal{{ loop.index }} " data-bs-target="#myModal{{ loop.index }}" data-bs-toggle="modal" class=" btn bg-white rounded align-center"> En savoir plus </a>
                    <div class="modal fade" id="myModal{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                    <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                                </div>
                                <div class="modal-body">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-4">.col-md-4</div>
                                            <div class="col-md-4 ml-auto">.col-md-4 .ml-auto</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3 ml-auto">.col-md-3 .ml-auto</div>
                                            <div class="col-md-2 ml-auto">.col-md-2 .ml-auto</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 ml-auto">.col-md-6 .ml-auto</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-9">
                                                Level 1: .col-sm-9
                                                <div class="row">
                                                    <div class="col-8 col-sm-6">
                                                        Level 2: .col-8 .col-sm-6
                                                    </div>
                                                    <div class="col-4 col-sm-6">
                                                        Level 2: .col-4 .col-sm-6
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <p class="card-date m-3"> {{new.date|date("d-m-Y")}} </p>
                </div>
            </div>
        </div>
        {% endfor %}
        <div class="mb-5" id="contact"></div>
    </div>
</div>

<hr class="separateur">
<h1 class="titre mt-5 mb-5">CONTACT</h1>
<div class="container">
    <div class=" contact row gx-5">
        <div class="col-xl-6 col-lg-6 col-md-10 col-sm-12">{% form_theme form 'bootstrap_4_layout.html.twig' %}
            <div class="form">
                {{ form_start(form) }}
                <div class="m-3">{{form_widget(form.firstname)}}</div>
                <div class="form-error">
                    {{ form_errors(form.firstname) }}
                </div>
                <div class="m-3">{{form_widget(form.lastname)}}</div>
                <div class="form-error">
                    {{ form_errors(form.lastname) }}
                </div>
                <div class="m-3">{{form_widget(form.email)}}</div>
                <div class="form-error">
                    {{ form_errors(form.email) }}
                </div>
                <div class="m-3">{{form_widget(form.phone_number)}}</div>
                <div class="form-error">
                    {{ form_errors(form.phone_number) }}
                </div>
                <div class="message m-3">{{form_widget(form.message)}}</div>
                <div class="form-error">
                    {{ form_errors(form.message) }}
                </div>
                <div class="m-3 p-3">{{form_widget(form.checkbox)}}</div>
                <div class="text-center">
                    <button class="btn m-5 bg-white rounded text-center">{{ button_label|default('Envoyer') }}</button>{{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="map1 col-6 pt-3">
            <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2623.978548696972!2d2.2912774158180307!3d48.87768547928943!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66f932e07fec1%3A0xe493fc5a9e79c52d!2s52%20Rue%20des%20Acacias%2C%2075017%20Paris!5e0!3m2!1sfr!2sfr!4v1623337638778!5m2!1sfr!2sfr"
                loading="lazy"></iframe>
        </div>
    </div>
</div>
{% endblock %}